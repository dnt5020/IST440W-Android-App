<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:padding="5dip">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/textViewPickSerialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#003684" />

        <TextView
            android:id="@+id/textViewPickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewPickSerialNumber"
            android:layout_alignBottom="@+id/textViewPickSerialNumber"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/textViewPickSerialNumber"
         
            android:text="Restaurant - Flintstones"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#003684"
            android:textStyle="bold" 
            android:maxWidth="200dp"/>

        <TextView
            android:id="@+id/textViewPickAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewPickName"
            android:layout_below="@+id/textViewPickName"
            android:layout_marginTop="25dp"
            android:text="Address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" android:maxWidth="200dp"/>

        <TextView
            android:id="@+id/textViewPickPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewPickAddress"
            android:layout_below="@+id/textViewPickAddress"
            android:layout_marginTop="15dp"
            android:text="(771) 544-0987"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" />

        <RatingBar
            android:id="@+id/ratingBarPicks"
            style="@style/MyCustomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewPickPhoneNumber"
            android:layout_below="@+id/textViewPickPhoneNumber"
            android:layout_marginTop="15dp"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ratingBarPicks"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/ratingBarPicks"
            android:text="@string/votes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" />

        <TextView
            android:id="@+id/textViewVoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:text="5"
            android:textAppearance="?android:attr/textAppearanceMedium"
             android:textColor="#372c24" android:layout_marginLeft="10dp" android:textStyle="bold"/>

<!--         <Button -->
<!--             android:id="@+id/button1" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_below="@+id/textView1" -->
<!--             android:layout_centerHorizontal="true" -->
<!--             android:layout_marginTop="29dp" -->
<!--             android:text="Button" /> -->

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textViewPickAddress"
            android:layout_marginRight="20dp"
            android:src="@drawable/forward" />

    </RelativeLayout>

    <!-- android:padding="10dip"/> -->
    <!-- android:paddingLeft="20dip"/> -->

</LinearLayout>